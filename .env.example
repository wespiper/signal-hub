# Signal Hub Environment Configuration
# Copy this file to .env and update with your values

# Environment (development, staging, production)
SIGNAL_HUB_ENV=development

# Edition (basic, pro, enterprise)
SIGNAL_HUB_EDITION=basic

# Early Access Mode - Set to true to enable all features
SIGNAL_HUB_EARLY_ACCESS=false

# License Key (required for Pro/Enterprise editions)
# SIGNAL_HUB_LICENSE_KEY=your-license-key-here

# Server Configuration
SIGNAL_HUB_HOST=localhost
SIGNAL_HUB_PORT=3333

# Logging
SIGNAL_HUB_LOG_LEVEL=INFO

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Vector Store Configuration
SIGNAL_HUB_VECTOR_STORE=chromadb
SIGNAL_HUB_CHROMA_PATH=./chroma_db

# PostgreSQL + pgvector (for production)
# SIGNAL_HUB_VECTOR_STORE=pgvector
# DATABASE_URL=postgresql://user:password@localhost:5432/signal_hub

# Cache Configuration
SIGNAL_HUB_CACHE_ENABLED=true
SIGNAL_HUB_CACHE_TTL=3600
SIGNAL_HUB_CACHE_MAX_SIZE_MB=500

# Model Configuration
SIGNAL_HUB_DEFAULT_MODEL=claude-3-haiku-20240307
SIGNAL_HUB_EMBEDDING_MODEL=text-embedding-3-small

# Cost Tracking
SIGNAL_HUB_TRACK_COSTS=true
SIGNAL_HUB_COST_ALERT_THRESHOLD=100.00

# Pro Features (when licensed)
SIGNAL_HUB_ML_ROUTING_ENABLED=false
SIGNAL_HUB_LEARNING_ENABLED=false
SIGNAL_HUB_ANALYTICS_ENABLED=false

# Enterprise Features (when licensed)
SIGNAL_HUB_TEAM_MANAGEMENT_ENABLED=false
SIGNAL_HUB_SSO_ENABLED=false
SIGNAL_HUB_AUDIT_LOGGING_ENABLED=false

# Development Settings
SIGNAL_HUB_DEV_MODE=true
SIGNAL_HUB_HOT_RELOAD=true
SIGNAL_HUB_DEBUG_SQL=false